<!-- SNSサイト会員登録画面 -->
<div class="container">
  <div class="row no-gutters">
  	<div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
  		<div class="bg-light py-5 px-5">
	  		<h3 class="my-3">＜新規会員登録＞</h3>
					<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  				<%= render "public/shared/error_messages", resource: resource %>
	  				<%= f.label :'■名前' %><br>
	  				<div class="field">
	    				<%= f.label :'（姓）' %>
	    				<%= f.text_field :last_name, class:"form-control", autofocus: true, placeholder: "山田" %>
	    				<%= f.label :'（名）' %>
	    				<%= f.text_field :first_name, class:"form-control",  placeholder: "道子" %>
	  				</div><br>

		  			<%= f.label :'■フリガナ' %><br>
		  			<div class="field">
		    			<%= f.label :'（セイ）' %>
		    			<%= f.text_field :last_name_kana, class:"form-control", placeholder: "ヤマダ" %>
		    			<%= f.label :'（メイ）' %>
		    			<%= f.text_field :first_name_kana, class:"form-control", placeholder: "ミチコ" %>
		  			</div><br>

						<%= f.label :'■自己紹介' %><br>
		  			<div class="field">
		    			<%= f.text_area :customer_introduction, class:"form-control",  placeholder:"よろしくお願いいたします" %>
		  			</div><br>

					  <%= f.label :'■メールアドレス' %><br>
		  			<div class="field">
		    			<%= f.email_field :email, class:"form-control",  placeholder:"sample@example.com" %>
		  			</div><br>

					  <%= f.label :'■電話番号（ハイフンなし）' %><br>
		  			<div class="field">
		    			<%= f.text_field :telephone_number, class:"form-control", placeholder:"00000000000" %>
		  			</div><br>

					  <%= f.label :'■郵便番号（ハイフンなし）' %><br>
		  			<div class="field">
		    			<%= f.text_field :postal_code, class:"form-control", placeholder:"0000000" %>
		  			</div><br>

					  <%= f.label :'■住所' %><br>
		  			<div class="field">
		    			<%= f.text_field :address, class:"form-control", placeholder:"a県a市〇〇△ー△ー△" %>
		  			</div><br>

		  			<div class="mb-3">
		    			<%= f.label :"■パスワード" %>
		    			<% if @minimum_password_length %>
		    				<em>(<%= @minimum_password_length %>文字以上)</em>
		    			<% end %><br />
		    			<%= f.password_field :password, class:"form-control",  autocomplete: "new-password" %>
		  			</div>

		  			<div class="mb-3">
		    			<%= f.label :"■パスワード（確認用）" %><br />
		    			<%= f.password_field :password_confirmation, class:"form-control", autocomplete: "new-password" %>
		  			</div>

		  			<div class="mb-3">
		    			<%= f.submit "新規登録", class: 'btn btn-primary' %>
		  			</div>
				<% end %>

				<h4>■既に登録済みの方</h4>
				<p><%= link_to 'こちら', customer_session_path %></p>

			<%#= render "public/shared/links" %>
  		</div>
  	</div>
	</div>
</div>
