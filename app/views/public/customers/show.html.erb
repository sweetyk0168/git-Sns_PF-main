<!-- マイページ情報詳細画面 -->
<div class="container">
  <div class="row">
    <div class="col-md-20 mx-sm-auto">
    	<div class="bg-light py-5 px-5">
    		<h3 class="mt-3">マイページ</h3>
	    	<h5>登録情報</h5>
	    		<div class="mb-2">
	     			<%= link_to "編集する", customers_information_edit_path, class:"btn btn-success" %>
	    		</div>

		  		<table class="table table-bordered">
  					<tr>
    			 		<th class="table-dark">氏名</th>
    			  	<td><%= @customer.last_name %><%= @customer.first_name %></td>
  					</tr>
  					<tr>
    					<th class="table-dark">カナ</th>
    					<td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
  					</tr>
  					<tr>
  						<th class="table-dark">プロフィール画像</th>
  						<td><%= link_to customer_path(@customer.id) do %>
              	<%= image_tag @customer.get_profile_image(100,100) %>
              	<% end %>
              </td>
  					</tr>
  					<tr>
  						<th class="table-dark">自己紹介</th>
  						<td><%= @customer.customer_introduction %></td>
  					</tr>
  					<tr>
    					<th class="table-dark">メールアドレス</th>
    					<td><%= @customer.email %></td>
  					</tr>
  					<tr>
    					<th class="table-dark">電話番号</th>
    					<td><%= @customer.telephone_number %></td>
  					</tr>
  					<tr>
    					<th class="table-dark">郵便番号</th>
    					<td><%= @customer.postal_code %></td>
  					</tr>
  					<tr>
    					<th class="table-dark">住所</th>
    					<td><%= @customer.address %></td><br>
  					</tr>
					</table>
    	</div>
    </div>
  </div>
</div>