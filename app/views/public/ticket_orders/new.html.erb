<div class="container">
  <div class="row no-gutters">
    <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
      <div class="bg-light py-5 px-5">
        <h3 class="mb-3">■注文情報入力</h3>
          <% if @ticketorder.errors.any? %>
          <%= @ticketorder.errors.count %>errors occurred
            <ul>
              <% @ticketorder.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>

  	      <p><%= notice %></p>

  	      <%= form_with model: @ticketorder, url: confirm_ticket_orders_path, method: :post, local:true do |f| %>
    		    <h5><strong>■支払方法</strong></h5>
    		    <%= f.radio_button :payment_method, :"クレジットカード", checked: true %>
    		    <%= f.label :"クレジットカード" %>

    		    <%= f.radio_button :payment_method, :"銀行振込" %>
    		    <%= f.label :"銀行振込" %>

    		    <h5><strong>■お届け先</strong></h5>
    		    <%= f.radio_button :my_address, "1", checked: true %>
    		    <%= f.label :"ご自身の住所" %><br>
    		    〒<%= current_customer.postal_code %> <%= current_customer.address %>
    		    <%= current_customer.last_name %><%= current_customer.first_name %><br>

            <div class="mt-3">
              <%= f.radio_button :my_address, "2" %>
    		      <%= f.label :"新しいお届け先" %><br>
            </div>

    		    <%= f.label :"■郵便番号（ハイフンなし）" %>
    		    <%= f.text_field :postcode, class:"form-control", placeholder:"0000000" %>
    		    <%= f.label :"■住所" %>
    		    <%= f.text_field :address, class:"form-control", placeholder:"東京都渋谷区代々木神園町０－０" %>
    		    <%= f.label :"■宛名" %>
    		    <%= f.text_field :name, class:"form-control", placeholder:"令和道子" %>

            <div class="mt-3">
              <%= f.submit "確認画面へ進む", class:"btn btn-success" %>
            </div>
  	      <% end %>
      </div>
    </div>
  </div>
</div>