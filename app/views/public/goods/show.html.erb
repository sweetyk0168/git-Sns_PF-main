<!-- グッズ情報詳細画面 -->
<div class="container">
  <div class="row justify-content-center">
    <div class="card-deck">
      <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
        <div class="bg-light py-5 px-5">
          <div class="mb-3">
            <!--<div class="card content-card border-dark">-->
            <!--  <div class="card-header p-0">-->
                <%= image_tag @good.get_image(200,200) %><br>
            <!--  </div>-->
            <!--</div>-->
          </div>

          <h3><%= @good.name %></h3>
          ￥<%= @good.price.to_s(:delimited, delimiter: ',') %><br>
          <%#= @good.introduction %><br>
           <%= safe_join(@good.introduction.split("\n"),tag(:br)) %><br>
          <div class="mt-3">
            <%= link_to '戻る', event_goods_path, class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>