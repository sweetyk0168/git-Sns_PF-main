<!-- イベント情報編集画面 -->
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
      <div class="bg-light py-5 px-5">
        <h3 class="text-dark bg-light p-4 mb-0">イベント情報編集</h3>
          <% if @event.errors.any? %>
            <%= @event.errors.count %>errors occurred
              <ul>
                  <% @event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
          <% end %>
          <div class="form-body p-4">
            <%= form_with model:@event, url:admin_event_path do |f| %>
              <%= f.label :"■イベントタイトル名" %>
              <%= f.text_field :name, class:"form-control", autofocus:true %><br>
              <%= f.label :"■イベント説明" %>
              <%= f.text_area :introduction, class:"form-control" %><br>
              <%= f.label :"■イベントURL" %>
              <%= f.text_field :url_strings, class:"form-control" %><br>
              <%= f.label :"■ジャンル" %>
              <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "--選択してください--"} %><br>
              <%= f.label :"■投稿ステータス" %><br>
              <%= f.radio_button :post_status, true %>
              <%= f.label :post_status, "投稿中",{ value: :true, style: "display: inline-block;" } %>
              <%= f.radio_button :post_status, false %>
              <%= f.label :post_status, "投稿完了", { value: :false, style: "display: inline-block;" } %><br>

              <%= f.submit '変更を保存', class:"btn btn-success"%>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>