<!-- グッズ情報新規登録画面 -->
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
      <div class="bg-light py-5 px-5">
        <h3 class="p-0 mb-0">＜グッズ情報新規投稿＞</h3>
          <% if @good.errors.any? %>
            <%= @good.errors.count %>errors occurred
              <ul>
                <% @good.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          <% end %>
          <div class="form-body p-4">
            <%= form_with model: @good, url: admin_event_goods_path do |f| %>
              <%= f.label :'■グッズ画像' %>
              <div class="mb-3">
                <%= f.file_field :image, accept: "image/*", class: "w-100" %><br>
              </div>

              <%= f.label :'■グッズ名' %>
              <%= f.text_field :name, class:"form-control", autofocus:true, placeholder:"グッズ名をここに入力してください" %><br>

              <%= f.label :'■価格' %>
              <%= f.text_field :price, class:"form-control", placeholder:"価格をここに入力してください" %><br>

              <%= f.label :'■グッズ説明文' %>
              <%= f.text_area :introduction, class:"form-control", rows:"3", placeholder:"グッズ説明文をここに入力してください" %><br>

              <%= f.label :'■投稿ステータス' %>
              <%= f.radio_button :post_status, true %>
              <%= f.label :post_status, "投稿中", { value: :true, style: "display: inline-block;" } %>
              <%= f.radio_button :post_status, false %>
              <%= f.label :post_status, "投稿完了", { value: :false, style: "display: inline-block;" } %><br>

              <%= f.submit '新規投稿', class:"btn btn-success" %>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>