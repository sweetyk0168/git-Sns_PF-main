<!-- ジャンル編集画面 -->
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
      <div class="bg-light py-5 px-5">
        <h3 class="p-1 mb-0">■ジャンル編集</h3>
          <% if @genre.errors.any? %>
            <%= @genre.errors.count %>errors occurred
              <ul>
                  <% @genre.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
          <% end %>
          <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
            <label>■ジャンル名</label>
            <%= f.text_field :name, class:"form-control" %>

            <div class="my-3">
              <%= f.submit '変更を保存', class:"btn btn-success" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>