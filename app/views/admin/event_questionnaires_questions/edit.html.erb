<!-- イベントアンケート情報編集画面 -->
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
      <div class="bg-light py-5 px-5">
        <h3 class="mt-3">■イベントアンケート情報編集</h3>
          <% if @event_questionnaires_question.errors.any? %>
            <%= @event_questionnaires_question.errors.count %>errors occurred
              <ul>
                  <% @event_questionnaires_question.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
              </ul>
          <% end %>
          <%= form_with model:@event_questionnaires_question, url: admin_event_questionnaires_question_path do |f| %>
            <%= f.label :"■イベントアンケート名" %>
            <%= f.text_field:title, class:"form-control", autofocus:true %>
            <%= f.label :"■イベントアンケート説明文" %>
            <%= f.text_area:content, rows:"3", class:"form-control" %>

            <div class="mt-3">
              <%= f.submit '変更を保存', class:"btn btn-success" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>