<!-- イベントアンケート情報一覧画面 -->
<div><%= flash[:notice] %></div>
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
      <div class="bg-light py-5 px-5">
        <div class="mt-3">
          <%= link_to '新規作成はこちらから' , new_admin_event_questionnaires_question_path, class:"btn btn-primary" %>
        </div>

        <h3 class="p-3 my-2">■アンケート一覧</h3>
        <table class="table table-bordered">
          <thead class="table-dark">
            <tr>
              <th>■イベントアンケート名</th>
              <th>■イベントアンケート説明文</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @event_questionnaires_questions.each do |question| %>
              <tr>
                <td><%= question.title %></td>
                <td><%= question.content %></td>
                <td><%= link_to '詳細画面へ' ,admin_event_questionnaires_question_path(question), class:"btn btn-success" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>