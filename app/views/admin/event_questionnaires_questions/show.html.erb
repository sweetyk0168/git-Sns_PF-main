<!-- イベントアンケート説明内容詳細画面 -->
<div><%= flash[:notice] %></div>
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
      <div class="bg-light py-5 px-5">
        <h3 class="mt-3">■アンケート質問内容の表示</h3>
         <table class="table table-bordered">
           <tbody>
              <tr>
                <th class="table-dark">イベントアンケート名</th>
                <td><%= @event_questionnaires_question.title %></td>
             </tr>
             <tr>
               <th class="table-dark">イベントアンケート説明文</th>
               <td><%= @event_questionnaires_question.content %></td>
           </tr>
           </tbody>
         </table>

          <div class="mb-3">
            <%= link_to '編集する', edit_admin_event_questionnaires_question_path(@event_questionnaires_question.id) , class:"btn btn-success" %>
          </div>

          <table class="table table-bordered">
            <thead class="table-dark">
              <tr>
                <th>イベントアンケート質問ID</th>
                <th>性別</th>
                <th>〇〇イベントに参加したきっかけ</th>
                <th>満足度</th>
                <th>満足度の理由</th>
                <th>参加決意</th>
                <th>イベントの感想</th>
              </tr>
            </thead>
            <tbody>
              <% if @event_questionnaires_answers.present? %>
                <% @event_questionnaires_answers.each do |answer| %>
                  <tr>
                    <td><%= @event_questionnaires_question.id %></td>
                    <td><%= answer.gender %></td>
                    <td><%= answer.reason %></td>
                    <td><%= answer.satisfaction %></td>
                    <td><%= answer.reason_for_satisfaction %></td>
                    <td><%= answer.participation %></td>
                    <td><%= answer.impressions %></td>
                  </tr>
                <% end %>
              <% else %>
                <p>まだ回答がありません</p>
              <% end %>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
