<!-- イベントアンケート説明内容新規登録画面 -->
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
      <div class="bg-light py-5 px-5">
        <h3 class="p-4 mb-0">＜アンケート質問の新規作成＞</h3>
          <% if @event_questionnaires_question.errors.any? %>
            <%= @event_questionnaires_question.errors.count %>errors occurred
              <ul>
                <% @event_questionnaires_question.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          <% end %>
          <div class="form-body p-4">
            <%= form_with model: @event_questionnaires_question, url: admin_event_questionnaires_questions_path do |form| %>
              <div class="mb-3">
                <%= form.label :'■イベントアンケート名' %>
                <%= form.text_field :title, class:"form-control", autofocus:true, placeholder:"イベントアンケート名をここに入力してください" %>
              </div>

              <div class="mb-3">
                <%= form.label :'■イベントアンケート説明文' %>
                <%= form.text_area :content, class:"form-control", autofocus:true, placeholder:"イベントアンケート説明文をここに入力してください" %>
              </div>

              <div class="mt-3">
                <%= form.submit '新規登録', class:"btn btn-success"%>
              </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>