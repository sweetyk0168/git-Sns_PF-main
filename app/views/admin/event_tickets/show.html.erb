<!-- イベントチケット詳細画面 -->
<div><%= flash[:notice] %></div>
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
      <div class="bg-light py-5 px-5">
        <h3 class="mt-3">■イベントチケット詳細</h3>
          <table class="table table-bordered">
            <tr>
              <th class="table-dark">イベントタイトル名</th>
              <td><%= @event_ticket.event_title %></td>
            </tr>
            <tr>
              <th class="table-dark">イベントチケット名</th>
              <td><%= @event_ticket.ticket_name %></td>
            </tr>
            <tr>
              <th class="table-dark">イベントチケット販売開始日</th>
              <td><%= @event_ticket.ticket_startday %></td>
            </tr>
            <tr>
              <th class="table-dark">イベントチケット販売終了日</th>
              <td><%= @event_ticket.ticket_endday %></td>
            </tr>
            <tr>
              <th class="table-dark">イベント会場名</th>
              <td><%= @event_ticket.ticket_place %></td>
            </tr>
            <tr>
              <th class="table-dark">イベント公演日</th>
              <td><%= @event_ticket.performance_date %></td>
            </tr>
            <tr>
              <th class="table-dark">チケット説明文</th>
              <td><%= @event_ticket.ticket_introduction %></td>
            </tr>
            <tr>
              <th class="table-dark">税込価格（税抜価格）</th>
              <td><%= @event_ticket.add_tax_ticket_price.to_s(:delimited) %>(<%= @event_ticket.ticket_price.to_s(:delimited) %>)円</td>
            </tr>
            <tr>
              <th class="table-dark">販売ステータス</th>
              <td>
                <% if @event_ticket.sales_status == true %>
                  販売中
                <% else %>
      　           販売終了
                <% end %>
              </td>
            </tr>
          </table>
        <div>
          <%= link_to '編集する', edit_admin_event_event_ticket_path(@event_ticket.id), class:"btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
</div>