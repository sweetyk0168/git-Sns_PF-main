<!-- SNSユーザー情報一覧画面 -->
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
      <div class="bg-light py-5 px-5">
        <h3 class="p-3 my-2">■会員一覧</h3>
        <table class="table table-bordered">
          <thead class="table-dark">
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td><%= link_to (customer.last_name +  customer.first_name), admin_customer_path(customer.id) %></td>
                <td><%= customer.email %></td>
                <td>
                  <%= customer.customer_status %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <%= paginate @customers %>
      </div>
    </div>
　</div>
</div>