<!-- SNSユーザー情報編集画面 -->
<div class="container">
  <div class="row no-gutters">
    <div class="col-md-20 col-sm-30 mx-10 mx-sm-auto">
      <div class="bg-light py-5 px-5">
        <h3 class="mt-3">■<%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
          <% if @customer.errors.any? %>
            <%= @customer.errors.count %>errors occurred
              <ul>
                <% @customer.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          <% end %>
          <%= form_for(@customer, url: admin_customer_path) do |f| %>
            <div>
              <%= f.label :■会員ID %>
              <%= @customer.id %>
            </div>
            <div class="mt-3">
              <%= f.label :■氏名 %>
              <%= f.text_field :last_name, class:"form-control", autofocus: true %>
              <%= f.text_field :first_name, class:"form-control" %>
            </div>
            <div class="mt-3">
              <%= f.label :■フリガナ %>
              <%= f.text_field :last_name_kana, class:"form-control" %>
              <%= f.text_field :first_name_kana, class:"form-control" %>
            </div>
            <div class="mt-3">
              <%= f.label:■郵便番号 %>
              <%= f.text_field :postal_code, class:"form-control" %>
            </div>
            <div class="mt-3">
              <%= f.label:■住所 %>
              <%= f.text_field :address, class:"form-control" %>
            </div>
            <div class="mt-3">
              <%= f.label:■電話番号 %>
              <%= f.text_field :telephone_number, class:"form-control" %>
            </div>
            <div class="mt-3">
              <%= f.label:■メールアドレス %>
              <%= f.text_field :email, class:"form-control" %>
            </div>
            <div class="mt-3">
              <p>■会員ステータス</p>
              <%= f.radio_button :is_deleted, :false %>
              <%= f.label:is_deleted, "有効", {value: :false } %>
              <%= f.radio_button :is_deleted, :true %>
              <%= f.label:is_deleted, "退会", {value: :true } %>
              <!--<label><%#= f.radio_button :is_deleted, "有効", checked:"checked" %>有効</label>-->
              <!--<label><%#= f.radio_button :is_deleted, "無効" %>退会</label>-->
            </div>

            <div>
              <%= f.submit '変更を保存', class:"btn btn-success" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>